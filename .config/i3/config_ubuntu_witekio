set $vert_monitor DP-1-1-1
set $left_monitor DP-1-8
set $right_monitor DP-1-1-8
exec --no-startup-id xrandr --output $vert_monitor --mode 1920x1080 --pos 3840x0 --rotate left --output DP-1-1 --off --output HDMI-2 --off --output HDMI-1 --off --output $left_monitor --primary --mode 1920x1200 --pos 0x312 --rotate normal --output DP-3 --off --output DP-2 --off --output DP-1 --off --output $right_monitor --mode 1920x1200 --pos 1920x312 --rotate normal


